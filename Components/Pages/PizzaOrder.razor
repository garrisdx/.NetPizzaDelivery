@page "/pizzaorder"
@rendermode InteractiveServer

<h3>PizzaDelivery</h3>

<h2>Select Topping</h2>
<Topping pizza="pizza"/>

<h2>Select Crust</h2>
<Crust pizza="pizza"/>

<p>Would you like to leave a tip?</p>
<select id="symbol" name="symbol" @bind="pizza.Tip">
    <option></option>
    <option value=.12>12%</option>
    <option value=.15>15%</option>
    <option value=.18>18%</option>
</select>

<p>Pizza Crust Cost: $@pizza.Crust.CrustPrice()</p>
<br />
<p>Pizza Toppings Cost: $@pizza.PizzaToppings.ToppingPrice() </p>
<br />
<p>Pizza Delivery Fee Cost: $@pizza.DeliveryFee</p>
<br />
<p>Tip Amount: $@pizza.GetTipAmount() </p>
<br />
<button @onclick="TotalBill">Calculate Bill</button>
<p role="status"> Total Price: $@total</p>


@code {
    Pizza pizza = new Pizza();
    double total;

    public void TotalBill()
    {
        total = pizza.GetFinalPrice();
    }

    
}